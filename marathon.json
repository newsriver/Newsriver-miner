{
  "id": "/newsriver/newsriver-miner",
  "cmd": null,
  "cpus": 0.5,
  "mem": 2048,
  "disk": 0,
  "instances": 3,
  "container": {
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "docker-registry-v2.newsriver.io:5000/newsriver-miner:latest",
      "network": "HOST",
      "privileged": true,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "path": "/",
      "protocol": "HTTP",
      "portIndex": 0,
      "gracePeriodSeconds": 90,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ],
  "args": [
    "--threads=50",
    "--batch=50",
    "--queue=100"
  ],
  "env": {
    "JAVA_OPTS": "-Xms512m -Xmx1536m -Xss1m -XX:MaxMetaspaceSize=512m -Duser.timezone=GMT -Dfile.encoding=utf-8 -XX:+UseConcMarkSweepGC -XX:+CMSParallelRemarkEnabled -XX:+UseCMSInitiatingOccupancyOnly -XX:CMSInitiatingOccupancyFraction=70 -XX:+ExitOnOutOfMemoryError"
  },
  "acceptedResourceRoles": [
    "slave_public"
  ]
}